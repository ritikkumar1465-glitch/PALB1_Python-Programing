class Solution:
    def combinationSum(self, candidates, target):
        result = []

        def backtrack(start, path, target):
            if target == 0:
                result.append(path[:])
                return

            if target < 0:
                return

            for i in range(start, len(candidates)):
                path.append(candidates[i])
                backtrack(i, path, target - candidates[i])  # same element allowed
                path.pop()

        backtrack(0, [], target)
        return result
